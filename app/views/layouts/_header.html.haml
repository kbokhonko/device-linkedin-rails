.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      //%a.brand{:href => "#"} Some Store
      .nav-collapse
        %ul.nav
          %li= link_to "Home", root_path
        %ul.nav.pull-right
          - if user_signed_in?
            %li
              - if current_user.provider.nil?
                = link_to "#{current_user.nickname}", edit_user_registration_path
              - else
                = link_to "#{current_user.nickname}", '#'
            %li
              = link_to('Logout ', destroy_user_session_path, :method => :delete)
          - else
            %li
              = link_to('Login', new_user_session_path)
            %li
              = link_to image_tag("/assets/linkedin.png"), user_omniauth_authorize_path(:linkedin), alt: "Sign in with Linkedin"
            %li
              = link_to('Register', new_user_registration_path)